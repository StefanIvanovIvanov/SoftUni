@model List<FunApp.Services.Models.Categories.CategoryIdAndNameViewModel>
@{
}

<div class="container" style="margin-top:20px">
    @for (int i = 0; i < Model.Count(); i++)
    {
        <a asp-controller="Categories"
           asp-action="Details"
           asp-route-id="@Model[i].Id">
            @Model[i].Name
        </a>

        if (i != @Model.Count() - 1)
        {
            <hr />
        }
    }
</div>
