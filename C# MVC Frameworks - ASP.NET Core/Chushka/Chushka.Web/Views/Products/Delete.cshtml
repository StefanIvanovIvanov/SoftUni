@model ProductEditViewModel

<main class="mt-3">
    <h1 class="text-center">Delete Product</h1>
    <hr class="hr-2 bg-dark" />
    <form class="mx-auto w-50" method="post">
        <div class="form-group">
            <label asp-for="Name"></label>
            <input class="form-control" asp-for="Name" placeholder="Name..." disabled="disabled">
        </div>
        <div class="form-group">
            <label asp-for="Price"></label>
            <input class="form-control" asp-for="Price" placeholder="Price..." disabled="disabled">
        </div>
        <div class="form-group">
            <label ></label>
            <textarea class="form-control" rows="4" placeholder="Description..." asp-for="Description" disabled="disabled"></textarea>
        </div>
        <div class="form-group">
            <h3 class="text-center">Product Type</h3>
            <hr class="hr-2 w-50 bg-dark">
            <div class="row mt-4">
                <div class="col">
                    <input type="radio" id="food" value="Food" asp-for="Type" disabled="disabled">
                    <label for="food">Food</label>
                </div>
                <div class="col">
                    <input type="radio" id="domestic" value="Domestic" asp-for="Type" disabled="disabled">
                    <label for="domestic">Domestic</label>
                </div>
                <div class="col">
                    <input type="radio" id="health" value="Health" asp-for="Type" disabled="disabled">
                    <label for="health">Health</label>
                </div>
                <div class="col">
                    <input type="radio" id="cosmetic" value="Cosmetic" asp-for="Type" disabled="disabled">
                    <label for="cosmetic">Cosmetic</label>
                </div>
                <div class="col">
                    <input type="radio" id="other" value="Other" asp-for="Type" disabled="disabled">
                    <label for="other">Other</label>
                </div>
            </div>
            <hr class="hr-2 w-50 bg-dark">
        </div>

        <div class="mt-4 d-flex justify-content-center">
            <button type="submit" class="btn chushka-bg-color text-white">Delete</button>
        </div>
    </form>
</main>