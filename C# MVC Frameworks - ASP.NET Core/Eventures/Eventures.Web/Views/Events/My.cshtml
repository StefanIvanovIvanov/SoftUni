@model IEnumerable<OrderListingViewModel>

@{
    ViewData["Title"] = "My Events";
    const string dateFormat = "dd-MMM-yyyy hh:mm:ss";
}

<main class="mt-3 mb-5 container">
    <h1 class="text-center">My Events</h1>
    <hr class="hr-2 eventures-bg-color"/>
    <table class="table table-hover">
        <thead>
        <tr class="row font-weight-bold">
            <th class="col-md-1">#</th>
            <th class="col-md-5">Name</th>
            <th class="col-md-2">Start</th>
            <th class="col-md-2">End</th>
            <th class="col-md-2">Tickets</th>
        </tr>
        </thead>
        <tbody>
        @{
            var orders = Model as OrderListingViewModel[] ?? Model.ToArray();
        }
        @for (int i = 0; i < orders.Length; i++)
        {
            var m = orders[i];

            <tr class="row">
                <th class="col-md-1">@(i + 1)</th>
                <td class="col-md-5">@m.Event.Name</td>
                <td class="col-md-2">@m.Event.StartDate.ToString(dateFormat)</td>
                <td class="col-md-2">@m.Event.EndDate.ToString(dateFormat)</td>
                <td class="col-md-2">@m.TicketsCount</td>
            </tr>
        }
        </tbody>
    </table>
    <hr class="hr-2 eventures-bg-color"/>

</main>