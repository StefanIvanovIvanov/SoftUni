@model EventCreateBindingModel

@{
    ViewData["Title"] = "Create Event";
}

<div class="mt-5 mb-3 w-50 container text-center">
    <form method="post">
        <h2>Create Event</h2>
        <div asp-validation-summary="All" class="text-danger"></div>
        <hr class="hr-2 eventures-bg-color">
        <div class="row">
            <div class="col-6 form-group">
                <label asp-for="Name"></label>
                <input class="form-control" asp-for="Name" placeholder="@Html.DisplayNameFor(d => d.Name)..."/>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="col-6 form-group">
                <label asp-for="Place"></label>
                <input class="form-control" asp-for="Place" placeholder="@Html.DisplayNameFor(d => d.Place)..."/>
                <span asp-validation-for="Place" class="text-danger"></span>
            </div>
        </div>

        <hr class="hr-2 eventures-bg-color my-4">

        <div class="row">
            <div class="col-6 form-group">
                <label asp-for="StartDate"></label>
                <input class="form-control" asp-for="StartDate" type="datetime-local" placeholder="@Html.DisplayNameFor(d => d.StartDate)..."/>
                <span asp-validation-for="StartDate" class="text-danger"></span>
            </div>

            <div class="col-6 form-group">
                <label asp-for="EndDate"></label>
                <input class="form-control" asp-for="EndDate" type="datetime-local" placeholder="@Html.DisplayNameFor(d => d.EndDate)..."/>
                <span asp-validation-for="EndDate" class="text-danger"></span>
            </div>
        </div>

        <hr class="hr-2 eventures-bg-color my-4">

        <div class="row">
            <div class="col-6 form-group">
                <label asp-for="TotalTickets"></label>
                <input class="form-control" min="1" asp-for="TotalTickets" placeholder="@Html.DisplayNameFor(d => d.TotalTickets)..."/>
                <span asp-validation-for="TotalTickets" class="text-danger"></span>
            </div>

            <div class="col-6 form-group">
                <label asp-for="PricePerTicket"></label>
                <input class="form-control" asp-for="PricePerTicket" placeholder="@Html.DisplayNameFor(d => d.PricePerTicket)..."/>
                <span asp-validation-for="PricePerTicket" class="text-danger"></span>
            </div>
        </div>

        <hr class="hr-2 eventures-bg-color my-4">

        <button type="submit" class="btn eventures-bg-color">Create Event</button>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial"/>
}